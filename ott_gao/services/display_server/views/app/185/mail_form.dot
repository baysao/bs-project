<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Mail Form</title>

    <script>
        function getPlayerReferrer(out) {
            out['value'] = VBX.App.config('player.referrer');
            return true;
        }
        function getPlayerName(out) {
            out['value'] = VBX.App.config('player.name');
            return true;
        }

        var includeComments = false;
        var commentsLabel = '';
        var includeCheckbox = false;
        var checkboxLabel = '';

        function getFields() {
            includeComments = VBX.toBoolean(VBX.App.config('includeComments'));
            commentsLabel = VBX.App.config('commentsLabel');
            includeCheckbox = VBX.toBoolean(VBX.App.config('includeCheckbox'));
            checkboxLabel = VBX.App.config('checkboxLabel');

            var fields = [
                {
                    name: 'Name',
                    type: 'text',
                    label:'Name',
                    required:true
                },
                {
                    name:'Email',
                    type:'email',
                    label:'Email',
                    required:true
                }
            ];

            if (includeComments)
            {
                fields.push(
                        {
                            name: 'Comments',
                            type: 'textarea',
                            label:commentsLabel,
                            required:false
                        });
            }

            if (includeCheckbox)
            {
                fields.push(
                        {
                            name: 'Checkbox',
                            type: 'checkbox',
                            label:checkboxLabel,
                            required:false
                        });
            }

            return fields;
        }
    </script>

    <link href="vbxapp.css" rel="stylesheet">
    <script src="vbxapp.min.js"></script>
    <script>
        VBX.App.init({
            form: {
                formElement: 'form-container1',
                submitElement: 'form-submit1',
                reloadOnConfigs: ['listIds'
                    , 'includeComments', 'commentsLabel', 'includeCheckbox', 'checkboxLabel'

                ]
                , source: getFields, fixedFields: {'PlayerReferrer': getPlayerReferrer, 'PlayerName': getPlayerName}

            }
        });
    </script>

    <style>
        .vbx-form-success .instructions {
            display:none;
        }

        .vbx-form-success-msg a, .vbx-form-error-msg a {
            text-decoration: underline;
            cursor: pointer;
        }
    </style>

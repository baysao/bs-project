    <title></title>
    <link href="vbxapp.css" rel="stylesheet">
    <script src="vbxapp.min.js"></script>
    <script>
        VBX.App.init({
            feed: { container: 'feed-container1', template: 'item-template1', source: 'getTwitterUrl(query, pageSize)' }
        });

        function getTwitterUrl(query, pageSize) {
            var feedUrl;

            if (query.indexOf('#') == 0) {
                feedUrl = '/api/twitter?q=' + query;
            } else if (query.indexOf('@') == 0) {
                feedUrl = '/api/twitter?q=from:' + query.substr(1);
            } else {
                feedUrl = '/api/twitter?q="' + query + '"';
            }

            if (!VBX.empty(pageSize)) {
                feedUrl += '&count=' + pageSize;
            }

            return feedUrl;
        }

        function formatTwitterDate () {

        }
    </script>


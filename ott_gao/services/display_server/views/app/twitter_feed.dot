        .twitter-content-container {width:100%; display:table-cell; vertical-align:top;}
        .twitter-handle, .tweet .vbx-feed-date {opacity:0.5;}
        .tweet .vbx-feed-date:before {
            content: "\00b7 ";
        }
    </style>
